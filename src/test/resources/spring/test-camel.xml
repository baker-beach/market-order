<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:camel="http://camel.apache.org/schema/spring" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
          http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<context:annotation-config />
	
	<bean id="activemq" class="org.apache.activemq.camel.component.ActiveMQComponent">
		<property name="brokerURL" value="${amq.broker.url}" />
	</bean>
	
	<camel:routeContext id="test-route-context">
		<camel:route id="foo">
			<camel:from uri="direct:order" />
			<camel:to uri="activemq:queue:foo" />
		</camel:route>
	</camel:routeContext>
	
	<camel:camelContext id="testCamelContext">
<!-- 		<camel:template id="producerTemplate" /> -->
		<camel:routeContextRef ref="test-route-context" />
	</camel:camelContext>

</beans>